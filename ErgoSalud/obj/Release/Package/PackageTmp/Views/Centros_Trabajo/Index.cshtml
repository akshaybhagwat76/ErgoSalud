@model IEnumerable<ErgoSalud.Models.ERGOS_Centros_Trabajo_N01>

@{
    ViewBag.Title = "Index";
}
<h2>Centros de Trabajo</h2>
<hr />
<div class="row">
    @Html.ActionLink("Nuevo Centro de Trabajo", "Create", null, new { @class = "btn btn-success", @style = "margin-left:20px;margin-bottom:10px" })
    @Html.ActionLink("Regresar","Index", "Empresas", null, new { @class = "btn btn-primary", @style = "margin-bottom:10px" })   <br>
</div>
<table class="table">

    <tr>
        <th>
            @Html.DisplayName("Razón Social")
        </th>
        <th>
            @Html.DisplayName("Centro de Trabajo")
        </th>
        <th>
            @Html.DisplayName("Fecha de Auditoría")
        </th>
        <th>
            @Html.DisplayName("No. Empleados")
        </th>


        <th>Acción</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ERGOS_Empresas_N01.Razon_Social)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_centro_trabajo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Auditoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.No_emplados)
            </td>


            <td>
                <a title="Editar" href="@Url.Action("Edit", new { id = item.id_centro_trabajo })">
                    <i class="fa fa-edit" title="Editar" style="font-size:23px"></i>
                </a>
                <a href="@Url.Action("Delete", new { id=item.id_centro_trabajo })">
                    <i class="fa fa-trash-o" title="Eliminar" style="font-size:23px"></i>
                </a>

            </td>
        </tr>
    }

</table>
